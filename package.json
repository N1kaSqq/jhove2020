{
  "name": "jhove2020",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://www.electron.build/configuration/configuration#Metadata-homepage",
  "author": {
    "name": "jhove2020",
    "email": "duallab@gmail.com"
  },
  "engines": {
    "node": ">=12"
  },
  "build": {
    "appId": "jhove2020",
    "target": "NSIS",
    "win": {
      "icon": "assets/icon.png"
    },
    "directories": {
      "buildResources": "src/components/assets"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "icon": "assets/icon.icns",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      "PAR",
      "libs",
      "DownloadedFiles"
    ]
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "dist:linux": "yarn dist --linux"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@types/valid-url": "^1.0.3",
    "bootstrap": "^4.5.3",
    "clipboard-polyfill": "^3.0.1",
    "file-type": "^16.0.1",
    "got": "^11.8.1",
    "i18next": "^19.8.3",
    "jquery": "^3.5.1",
    "os-locale": "^5.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-dropzone": "^11.2.4",
    "react-i18next": "^11.7.3",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "reactstrap": "^8.7.1",
    "redux": "^4.0.5",
    "request": "^2.88.2",
    "source-map-support": "0.5.9",
    "valid-url": "^1.0.9",
    "validator": "^13.5.2"
  },
  "resolutions": {
    "upath": "1.0.5"
  },
  "devDependencies": {
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "^10.1.0",
    "electron": "^11.1.1",
    "electron-builder": "20.28.1",
    "electron-webpack": "2.1.2",
    "electron-webpack-eslint": "3.0.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-bundle": "3.0.0",
    "eslint-plugin-react": "7.21.5",
    "webpack": "4.16.5"
  }
}
